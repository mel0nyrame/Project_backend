<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mel0ny.springboot.mapper.ScoreMapper">
    <update id="updateScoreByCourseId">
        UPDATE score
        <set>
            <if test="course.courseId != null and course.courseId != '">
                course_id = #{course.courseId}
            </if>
            <if test="course.courseName != null and course.courseName != ''">
                course_name = #{course.courseName}
            </if>
        </set>
        WHERE course_id = #{courseId}
    </update>

    <update id="updateScoreByStudentId">
        UPDATE score
        <set>
            <if test="student.studentName != null and student.studentName != ''">
                student_name = #{student.studentName},
            </if>
            <if test="student.studentGender != null and student.studentGender != ''">
                student_gender = #{student.studentGender},
            </if>
            <if test="student.studentBirthday != null">
                student_birthday = #{student.studentBirthday},
            </if>
            <if test="student.studentPhone != null and student.studentPhone != ''">
                student_phone = #{student.studentPhone},
            </if>
            <if test="student.studentEmail != null and student.studentEmail != ''">
                student_email = #{student.studentEmail},
            </if>
            <if test="student.studentMajor != null and student.studentMajor != ''">
                student_major = #{student.studentMajor},
            </if>
        </set>
        WHERE student_id = #{studentId}
    </update>
</mapper>